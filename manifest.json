{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
    "manifestVersion": "1.16",
    "version": "1.0.0",
    "id": "2b5b9e4f-8a9b-4c7d-9e8f-7a6b5c4d3e2f",
    "packageName": "com.filesmatch.app",
    "developer": {
        "name": "Files Match",
        "websiteUrl": "https://<YOUR_GITHUB_USERNAME>.github.io/<YOUR_REPOSITORY_NAME>/",
        "privacyUrl": "https://<YOUR_GITHUB_USERNAME>.github.io/<YOUR_REPOSITORY_NAME>/index.html#",
        "termsOfUseUrl": "https://<YOUR_GITHUB_USERNAME>.github.io/<YOUR_REPOSITORY_NAME>/index.html#"
    },
    "icons": {
        "color": "color.png",
        "outline": "outline.png"
    },
    "name": {
        "short": "Files Match",
        "full": "Files Matching and Comparison Tool"
    },
    "description": {
        "short": "Compare CSV, Excel, and other files directly in Teams.",
        "full": "Select two files (CSV, Excel, JSON, etc.), match key columns by selecting corresponding headers, and compare their content. Your data never leaves your device."
    },
    "accentColor": "#6264A7",
    "configurableTabs": [
        {
            "configurationUrl": "https://<YOUR_GITHUB_USERNAME>.github.io/<YOUR_REPOSITORY_NAME>/config.html",
            "canUpdateConfiguration": true,
            "scopes": [
                "team",
                "groupchat"
            ]
        }
    ],
    "staticTabs": [
        {
            "entityId": "filesMatchPersonalTab",
            "name": "Compare Files",
            "contentUrl": "https://<YOUR_GITHUB_USERNAME>.github.io/<YOUR_REPOSITORY_NAME>/index.html",
            "websiteUrl": "https://<YOUR_GITHUB_USERNAME>.github.io/<YOUR_REPOSITORY_NAME>/index.html",
            "scopes": [
                "personal"
            ]
        }
    ],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "validDomains": [
        "<YOUR_GITHUB_USERNAME>.github.io",
        "cdnjs.cloudflare.com",
        "consent.cookiebot.com",
        "consentcdn.cookiebot.com",
        "www.googletagmanager.com",
        "www.youtube.com"
    ]
}